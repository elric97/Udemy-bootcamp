<% include ./partials/header %>    

    <div class="ui main text container segment"> 
        <div class="ui huge header">Edit <%= blog.title %></div>
        <!--HTML forms does not support put request so we use ?_method=PUT for that work around along with method over ride package-->
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <!--Value is used for filling form beforehand-->
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label>Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
            <button class="fluid ui inverted red button">Submit</button>
        </form>
    </div>
   
    
<% include ./partials/footer %>