<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
           <% blog.forEach(function(blog) { %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>">
                        </div>
                        <div class="content">
                             <a class="header" href="/blogs/<%= blog._id %>"><h2><%= blog.title %></h2></a>
                            <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                            </div>
                            <div class="description">
                                <p><%= blog.body.substring(0,100) %>....</p>
                            </div>
                            <div class="extra">
                                <a href="/blogs/<%= blog._id %>" class="ui fluid inverted blue button">
                                    Read more
                                    <i class="right chevron icon" id="arrow"></i>
                                </a> 
                            </div>
                        </div>
                    </div>
            <% }); %>  
        </div>
    </div>
</div>
    
<% include ./partials/footer %>