<% include ../partials/header %>

<h1><%= val.name %></h1>

<img src="<%= val.image %>">
<p><%= val.description %></p>
<p>
    <a href="/campgrounds/<%= val._id %>/comments/new" class="btn btn-success btn-lg">Add new Comment</a>
</p>
<% val.comments.forEach(function(cmnt){%>
    <p>
        <strong><%= cmnt.author %></strong> - <%= cmnt.text %>
    </p>
<% }); %>

<% include ../partials/footer %>