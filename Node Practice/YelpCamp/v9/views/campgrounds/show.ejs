<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= val.image %>" class="image-responsive">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= val.name %></a></h4>
                    <p><%= val.description %></p>
                    <p>Submitted by <%= val.author.username %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a href="/campgrounds/<%= val._id %>/comments/new" class="btn btn-success">Add new Comment</a>
                </div>
                <hr>
                <% val.comments.forEach(function(cmnt){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= cmnt.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= cmnt.text %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>