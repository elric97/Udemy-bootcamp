<% include partials/header %>

<div class="container">
     <header class="jumbotron">
         <div class="container">
            <h1>CampGrounds</h1>
            <p>View our handpicked CampGrounds</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new Campground</a>
            </p>
         </div>
    </header>
    <!--Flex wrap is used to align the grid correctly in case of diff dimension images-->
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% for (var i=0;i<data.length;i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= data[i].image %>">
                    <div class="caption text-center">
                         <h4><%= data[i].name %></h4> 
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= data[i]._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
    <a href="/">Home Page</a>    
</div>
   
<% include partials/footer %>